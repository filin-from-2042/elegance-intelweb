<version>1.0</version>
<description>Настройки блока About в шаблоне 'Elegance'</description>
<files>
    <filename module="mod_elegance_about">mod_elegance_about.php</filename>
    <filename>mod_elegance_about.xml</filename>
</files>
<config>
    <fields name="params">
        <fieldset name="basic">
            <field name="header" type="text" default="default" label="Заголовок блока 'О компании'" description="Заголовок блока 'О компании'" />
            <field name="sub_header" type="text" default="default" label="Подзаголовок блока 'О компании'" description="Подзаголовок блока 'О компании'" />
            <field name="text" type="editor" default="default" label="Текст Текстовая информация блока 'О компании'" description="Текстовая информация блока 'О компании'" filter="safehtml"/>
            <field name="why_header" type="text" label="Загловок блока 'Почему мы'" description="Заголовок блока 'Почему мы'" />
            <field name="why_text" type="editor" label="Текст блока 'Почему мы'" description="Текстовая информация блока 'Почему мы'" filter="safehtml"/>
         </fieldset>
        <fieldset name="advanced">
            <field name="layout" type="modulelayout"
                   label="JFIELD_ALT_LAYOUT_LABEL"
                   description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        </fieldset>
    </fields>
</config>

</extension>

