<version>1.0</version>
<description>Настройки блока Contact в шаблоне 'Elegance'</description>
<files>
	<folder>tmpl</folder>	
    <filename module="mod_elegance_contact">mod_elegance_contact.php</filename>
	<filename>index.html</filename>
    <filename>mod_elegance_contact.xml</filename>
</files>
<config>
    <fields name="params">
        <fieldset name="basic">
            <field name="header" type="text" default="" label="Заголовок 'Контакты'" description="Заголовок 'Контакты'" />
            <field name="sub_header" type="text" default="" label="Подзаголовок 'Контакты'" description="Подзаголовок 'Контакты'" />
            <field name="mail_us" type="text" default="" label="Напишите нам" description="Напишите нам" />
            <field name="call_us" type="text" default="" label="Позвоните нам" description="Позвоните нам" />

         </fieldset>
        <fieldset name="advanced">
            <field name="layout" type="modulelayout"
                   label="JFIELD_ALT_LAYOUT_LABEL"
                   description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        </fieldset>
    </fields>
</config>

</extension>

