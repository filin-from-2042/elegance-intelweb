<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
<name>elegance_team</name>
<creationDate>November 2014</creationDate>
<author>filin_from_2042</author>
<copyright>Copyright Info</copyright>
<license>Because fuck you!</license>
<version>1.0</version>
<description>Настройки блока Team в шаблоне 'Elegance'</description>
<files>
    <filename module="mod_elegance_team">mod_elegance_team.php</filename>
    <filename>mod_elegance_team.xml</filename>
</files>
<config>
    <fields name="params">
        <fieldset name="basic">
            <field name="header" type="text" default="заголовок" label="Заголовок" description="Текстовая заголовка блока" />
            <field name="sub_header" type="text" default="подзаголовок" label="Подзаголовок" description="Текстовая подзаголовка" />

            <field name="photo_first" type="media" default="фото" label="Фото сотрудника" description="Фото сотрудника" filter="safehtml"/>
            <field name="name_first" type="text" default="имя" label="Имя сотрудника" description="Имя сотрудника" filter="safehtml"/>
            <field name="desc_first" type="text" default="должность" label="Должность сотрудника" description="Должность сотрудника" filter="safehtml"/>

            <field name="photo_second" type="media" default="Фото" label="Фото сотрудника" description="Фото сотрудника" filter="safehtml"/>
            <field name="name_second" type="text" default="имя" label="Имя сотрудника" description="Имя сотрудника" filter="safehtml"/>
            <field name="desc_second" type="text" default="должность" label="Должность сотрудника" description="Должность сотрудника" filter="safehtml"/>

            <field name="photo_third" type="media" default="имя" label="Фото сотрудника" description="Фото сотрудника" filter="safehtml"/>
            <field name="name_third" type="text" default="имя" label="Имя сотрудника" description="Имя сотрудника" filter="safehtml"/>
            <field name="desc_third" type="text" default="должность" label="Должность сотрудника" description="Должность сотрудника" filter="safehtml"/>

         </fieldset>
        <fieldset name="advanced">
            <field name="layout" type="modulelayout"
                   label="JFIELD_ALT_LAYOUT_LABEL"
                   description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        </fieldset>
    </fields>
</config>

</extension>

