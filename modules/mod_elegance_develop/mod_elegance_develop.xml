            <field name="plan_4_header" type="text" label="Тариф 4" description="Заголовок 4го тарифа" />
            <field name="plan_4_price" type="text" label="Цена 4" description="Цена тарифа 4" />
            <field name="plan_4_text" type="editor" width="500" height="150" label="Текст 4" description="Текс тарифа 4" filter="safehtml"/>
         </fieldset>
        <fieldset name="advanced">
            <field name="layout" type="modulelayout"
                   label="JFIELD_ALT_LAYOUT_LABEL"
                   description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        </fieldset>
    </fields>
</config>

</extension>

